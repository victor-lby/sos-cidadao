# S.O.S Cidadão Platform - Docker Development Environment
# This file is used when running the full stack in Docker Compose

# Application Environment
ENVIRONMENT=development
SERVICE_VERSION=1.0.0
DEBUG=true
BASE_URL=https://api.sos-cidadao.orb.local

# Database Configuration (Docker internal networking)
MONGODB_URI=mongodb://mongodb:27017/sos_cidadao_dev
MONGODB_DATABASE=sos_cidadao_dev
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Redis Configuration (Docker internal networking)
REDIS_URL=redis://redis:6379
REDIS_TOKEN=

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Message Queue Configuration (Docker internal networking)
AMQP_URL=amqp://admin:admin123@rabbitmq:5672/
AMQP_CONNECTION_TIMEOUT=30
AMQP_HEARTBEAT=600
AMQP_BLOCKED_CONNECTION_TIMEOUT=300
AMQP_RETRY_DELAY=1.0
AMQP_MAX_RETRIES=3

# Feature Flags
DOCS_ENABLED=true
OTEL_ENABLED=true
HAL_STRICT=false

# OpenTelemetry Configuration (Docker internal networking)
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318/v1/traces
OTEL_API_KEY=
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:5000
VITE_APP_TITLE=S.O.S Cidadão - Development
NODE_ENV=development