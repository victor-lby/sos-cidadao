# S.O.S Cidad√£o Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
ENVIRONMENT=development
SERVICE_VERSION=1.0.0
DEBUG=true
BASE_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sos_cidadao_dev
MONGODB_DATABASE=sos_cidadao_dev
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Redis Configuration (Upstash for production)
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Message Queue Configuration (CloudAMQP LavinMQ for production)
AMQP_URL=amqp://admin:admin123@localhost:5672/
AMQP_CONNECTION_TIMEOUT=30
AMQP_HEARTBEAT=600
AMQP_BLOCKED_TIMEOUT=300
AMQP_RETRY_DELAY=1.0
AMQP_MAX_RETRIES=3

# Feature Flags
DOCS_ENABLED=true
OTEL_ENABLED=true
HAL_STRICT=false

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_API_KEY=
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Production Environment Variables (for Vercel deployment)
# These should be set in Vercel dashboard, not in .env files
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sos_cidadao_prod
# REDIS_URL=https://your-redis-instance.upstash.io
# REDIS_TOKEN=your-upstash-token
# AMQP_URL=amqps://username:password@your-lavinmq-instance.cloudamqp.com/vhost
# JWT_SECRET=your-production-jwt-secret
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-collector-endpoint


# NEW RELIC CONFIGURATION
NEW_RELIC_APP_NAME=sos-cidadao
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_LOG_LEVEL=debug
NEW_RELIC_DISTRIBUTED_TRACING_ENABLED=true
NEW_RELIC_ALLOW_ALL_HEADERS=true
NEW_RELIC_USER_KEY=